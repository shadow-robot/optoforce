<launch>
  <arg name="rviz" default="true"/>

  <include file="$(find optoforce)/launch/optoforce.launch"/>

  <include if="$(arg rviz)" file="$(find optoforce)/launch/hand_h_rviz.launch"/>

  <!-- Static transforms form Optoforce sensor to finger tip -->
  <node name="optoforce_0_broadcaster" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 1.57 H0_F0_optoforce optoforce_0 100" />
  <node name="optoforce_1_broadcaster" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 1.57 H0_F1_optoforce optoforce_1 100" />
  <node name="optoforce_2_broadcaster" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 1.57 H0_F2_optoforce optoforce_2 100" />
  <!--node name="optoforce_3_broadcaster" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 1.57 rh_rftip optoforce_3 100" /-->
</launch>
